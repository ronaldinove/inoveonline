@model Contato

@{
    ViewData["Title"] = "Edição de Cadastro Contatos";
}

<h2 class="justify-content-md-center">Edição Cadastro Contatos</h2>

<div class="row justify-content-md-center">
    <form method="POST" asp-for="Cadastro" id="formulario">
        <input type="hidden" asp-for="id" />
        <div class="form-group">
            <label asp-for="nome">Nome:</label><br>
            <input type="text" asp-for="nome" id="nome"><br>
        </div>
            
        <div class="form-group">
            <label asp-for="phone">Whatsapp:</label><br>
            <input type="tel" asp-for="phone" id="phone" placeholder="55 12345-6789"><br>
        </div>

        <div class="form-group">           
        <label asp-for="email">E-mail:</label><br>
        <input type="text" asp-for="email" id="email"><br>              
        </div>
            
        <div class="form-group">
            <label asp-for="servico" id="servico" name="servico">Serviço desejado:</label><br>
            <select asp-for="servico">
                <option value="assistencia">Assistência técnica de smartphone</option>
                <option value="assistencia">Assistência técnica de games</option>
                <option value="assistencia">Importação de iPhone</option>
                <option value="assistencia">Outro serviço/assunto</option>  
            </select>
        </div>

        <div class="form-group">
            <label asp-for= "mensagem">Mensagem:</label><br>
            <textarea asp-for="mensagem" class="msg" cols="35" rows="8"></textarea><br>
        </div>
           
            
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="Respondido" value="@true" />
            <label class="form-check-label" for="Respondido">Respondido</label>
        </div>

        <div>
            <button type="submit" class="btn btn-primary" >Salvar</button>    
        </div>
        
    </form>
</div>


    